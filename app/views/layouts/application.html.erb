<!DOCTYPE html>
<html>
  <head>
    <title>Voise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Oswald|Special+Elite" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-left">
        <%= link_to "Dear Mr. President,", root_path, :class => "navbar_title" %>
      </div>
      <div class="navbar-right">
        <% if current_user %>
          <%= "#{current_user.name} is logged in" %>
          <%= link_to "Sign Out", session_path(current_user), :method => 'delete' %>
        <% else %>
          <%= link_to "Login with Facebook", "/auth/facebook" %>
        <% end %>
      </div>
    </nav>
    <%= render partial: "/layouts/flash" %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
